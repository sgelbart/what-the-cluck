<p id="notice"><%= notice %></p>

<h1>Listing Hatches</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Hatched at</th>
      <th>Chicken amount</th>
      <th>Hatchery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hatches.each do |hatch| %>
      <tr>
        <td><%= hatch.name %></td>
        <td><%= hatch.description %></td>
        <td><%= hatch.hatched_at %></td>
        <td><%= hatch.chicken_amount %></td>
        <td><%= hatch.hatchery %></td>
        <td><%= link_to 'Show', hatch %></td>
        <td><%= link_to 'Edit', edit_hatch_path(hatch) %></td>
        <td><%= link_to 'Destroy', hatch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

